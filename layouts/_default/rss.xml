{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:webfeeds="http://webfeeds.org/rss/1.0">
  <channel>
<title>NOSIGNAL.ZONE by Coraline Ada Ehmke</title>
<link>{{ .Permalink }}</link>
<description>The latest noise from nosignal.zone</description>
{{ with .Site.LanguageCode }}
  <language>{{.}}</language>
{{end}}
<copyright>Coraline Ada Ehmke</copyright>
{{ if not .Date.IsZero }}
  <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
{{ end }}
{{- with .OutputFormats.Get "RSS" -}}
  {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
{{- end -}}
{{ range $pages }}
    <item>
      <title>{{ .Title }}</title>

      <link>{{ .Permalink }}</link>

      {{ with .GitInfo }}
        <pubDate>
        {{ .AuthorDate.UTC.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}
        </pubDate>
      {{ else }}
        <pubDate>
          {{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}
        </pubDate>
      {{ end }}
      <guid>{{ .Permalink }}</guid>
      <description>
        {{ if isset .Params "image" }}
          {{ $banner := .Page.Params.Image }}
          {{ printf "<![CDATA[<img src=\"/images/hero/%s\"/>]]>" $banner | safeHTML }}
        {{ end }}
        {{ .Content | html }}
      </description>
      {{ if isset .Params "mediaurl" }}
        <enclosure url="http://localhost:1313{{ .Page.Params.MediaUrl }}" length="{{ .Page.Params.MediaSizeInBytes }}" type="{{ .Page.Params.MediaType }}" />
      {{ end }}
    </item>
    {{ end }}
  </channel>
</rss>
